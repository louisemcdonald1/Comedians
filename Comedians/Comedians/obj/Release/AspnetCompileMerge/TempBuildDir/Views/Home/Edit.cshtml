@model Comedians.Models.Performer

@{
    ViewBag.Title = "Edit Comedian";
}
<div class="views">
    <h3>Edit</h3>
    <hr />
    @using (Html.BeginForm())
    {
        <div class="form-horizontal col-xs-6">
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Genre, htmlAttributes: new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.Genre, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CountryOfOrigin, htmlAttributes: new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.CountryOfOrigin, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.YearsActive, htmlAttributes: new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.YearsActive, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.PictureUrl, htmlAttributes: new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.PictureUrl, new { htmlAttributes = new { @class = "form-control" } })
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModalPicture">?</button>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.VideoUrl, htmlAttributes: new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.VideoUrl, new { htmlAttributes = new { @class = "form-control" } })
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModalVideo">?</button>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Likes, htmlAttributes: new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.Likes, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Dislikes, htmlAttributes: new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @Html.EditorFor(m => m.Dislikes, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-default" }) &nbsp;&nbsp;&nbsp; &nbsp;
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
        <div class="form-horizontal col-xs-6">
            <br />
            <div class="form-group">
                <div class="col-xs-3"></div>
                <div class="col-xs-7 text-center">
                    <img src="@Url.Content(Model.PictureUrl)" height="150" />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Biography, htmlAttributes: new { @class = "control-label col-xs-3" })
                <div class="col-xs-9">
                    @*@Html.TextAreaFor(m => m.Biography, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.TextAreaFor(m => m.Biography, 10, 30, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>
    }

    @*div needed, otherwise hr is in top right corner with no height or width*@
    <div class="col-xs-12 rule">
        <hr />
    </div>
</div>
<!-- Modal -->
<div id="myModalPicture" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Getting a picture URL</h4>
            </div>
            <div class="modal-body modalStyle">
                <ol>
                    <li>Find a picture on the web that you want to use</li>
                    <li>Right-click on the picture</li>
                    <li>Select 'Copy image address' from the menu</li>
                    <li>Paste into the field on the left</li>
                </ol>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="myModalVideo" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Getting a video URL</h4>
            </div>
            <div class="modal-body modalStyle">
                <ol>
                    <li>Find a video on YouTube that you want to use</li>
                    <li>Right-click on the video</li>
                    <li>Select 'Copy embed code' from the menu</li>
                    <li>Paste the embed code into a text editor, e.g. Notepad</li>
                    <li>Copy the link in the 'src' tag</li>
                    <li>Paste into the field on the left</li>
                </ol>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>    