@model Comedians.Models.Performer

<tr id="@Model.Id" >
    <td class="col-xs-1 text-center">
        <a href="@Url.Action("Details", new {id = Model.Id })">
            <img src="@Url.Content(Model.PictureUrl)" height="100" />
        </a>
    </td>

    <td class="col-xs-1">
        <a href="@Url.Action("Details", new {id = Model.Id })">
            @Html.DisplayFor(modelItem => Model.Name)
        </a>
        
    </td>
    <td class="col-xs-1">
        @Html.DisplayFor(modelItem => Model.Genre)
    </td>
    <td class="col-xs-1">
        @Html.DisplayFor(modelItem => Model.CountryOfOrigin)
    </td>
    <td class="col-xs-1">
        @Html.DisplayFor(modelItem => Model.YearsActive)
    </td>  
    <td class="col-xs-1 text-right">
        @Html.DisplayFor(modelItem => Model.Likes)
    </td> 
    <td class="col-xs-1">
        @using (Ajax.BeginForm(
                                actionName: "_Like",
                                controllerName: "Home",
                                routeValues: new { id = Model.Id },
                                ajaxOptions: new AjaxOptions
                                {
                                    UpdateTargetId = Model.Id.ToString(),
                                    InsertionMode = InsertionMode.ReplaceWith
                                }
                        ))
        {
            <input id="likeButton" type="submit" value="&#xf164" class="fa fa-input fa-2x btn btn-default">
        }
    </td>
    <td class="col-xs-1 text-right">
        @Html.DisplayFor(modelItem => Model.Dislikes)
        @*@Html.DisplayFor()*@
        </td>
<td class="col-xs-1">
       
        @using (Ajax.BeginForm(
                                    actionName: "_Dislike",
                                    controllerName: "Home",
                                    routeValues: new { id = Model.Id },
                                    ajaxOptions: new AjaxOptions
                                    {
                                        UpdateTargetId = Model.Id.ToString(),
                                        InsertionMode = InsertionMode.ReplaceWith
                                    }                                            
                            ))
        {
            <input id="dislikeButton" type="submit" value="&#xf165" class="fa fa-input fa-lg btn btn-default">
        }
    </td>
</tr>

